<h3><%= @product.name %></h3>
<h4>Description</h4>
<p><%= @product.description %></p>
<hr />
<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
	<%= form_for @purchase do |f| %>
		<% @purchase.errors.any? %>
			<ul>
			<% @purchase.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
			</ul>
			<%= f.text_field :name, placeholder: "Full Name", class: 'form-control' %>
			<%= f.text_area :address, placeholder: "Address", class: 'form-control' %>
			<%= f.text_field :telephone, placeholder: "Telephone", class: 'form-control' %>
			<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Figaro.env.stripe_publishable_key %>"
          data-description="<%= @product.name %>"
          data-amount="<%= @product.price %>"></script>
	<% end %>
</div>